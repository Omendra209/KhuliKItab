<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#D9E9F3"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text_view_topic"
        android:layout_width="418dp"
        android:layout_height="62dp"
        android:background="@drawable/content_background"
        android:text="Topics"
        android:textSize="35dp"
        android:gravity="center"
        android:textColor="#87CEFA"
        android:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="758dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_topic"
        tools:layout_editor_absoluteX="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:clickable="false"
                android:id="@+id/Topic1"
                android:layout_width="match_parent"
                android:layout_height="0.5in"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/white">

                <TextView
                    android:id="@+id/Topic1TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="#87CEFA"
                    android:textStyle="bold"
                    android:text="A to F Alphabets"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/Topic2"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="0.5in"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/white">

                <TextView
                    android:id="@+id/Topic2TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="#87CEFA"
                    android:textStyle="bold"
                    android:text="G to L Alphabets"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0.5in"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="#87CEFA"
                    android:textStyle="bold"
                    android:text="M to Q Alphabets"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0.5in"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="#87CEFA"
                    android:textStyle="bold"
                    android:text="A to F Alphabets"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0.5in"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="#87CEFA"
                    android:textStyle="bold"
                    android:text="R to V Alphabets"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0.5in"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/white">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="#87CEFA"
                    android:textStyle="bold"
                    android:text="W to Z Alphabets"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0.5in"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/white">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="#87CEFA"
                    android:textStyle="bold"
                    android:text="Topic"/>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>