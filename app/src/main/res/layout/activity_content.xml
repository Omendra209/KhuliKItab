<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9E9F3">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="420dp"
        android:layout_height="76dp"
        android:background="@drawable/content_background"
        android:fontFamily="sans-serif-black"
        android:text="Content"
        android:textColor="#87CEFA"
        android:textSize="50dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="759dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="40dp"
        tools:layout_editor_absoluteX="0dp">





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2in"
            android:background="@drawable/boarder"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <androidx.media3.ui.PlayerView
                android:id="@+id/player_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/video_logo">

            </androidx.media3.ui.PlayerView>


        </RelativeLayout>



        <androidx.cardview.widget.CardView
            android:id="@+id/textCon"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">
            <ImageView
                android:layout_width="148dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:elevation="3dp"
                android:src="@drawable/book1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:paddingLeft="1.1in"
                android:text="Text Content"
                android:textColor="#87CEFA"
                android:textSize="40dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/go_to_quiz"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="148dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:elevation="3dp"
                android:src="@drawable/quiz" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:paddingLeft="1.1in"
                android:text="Go to Quiz"
                android:textColor="#87CEFA"
                android:textSize="40dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>